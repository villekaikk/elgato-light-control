<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ElgatoLightControl.ViewModels.Views"
             xmlns:vmm="clr-namespace:ElgatoLightControl.ViewModels.Models"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="400"
             x:Class="ElgatoLightControl.Views.DeviceListView"
             x:DataType="vm:DeviceListViewModel">
    
    <Design.DataContext>
        <vm:DeviceListViewModel />
    </Design.DataContext>
    
    <Border BorderBrush="Black" BorderThickness="1">
        <StackPanel>
            <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="vmm:ElgatoDeviceListViewModel">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding DisplayName}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Border>
</UserControl>
